# Skynet RC1 Configuration Example
# Copy this file to .env and modify the values as needed

# ===========================
# Authentication Configuration
# ===========================

# Enable/Disable LDAP Authentication (default: False)
# When enabled, users can authenticate with Active Directory
# When disabled, only local Django users are supported
LDAP_ENABLED=false

# Enable/Disable JWT Authentication (default: True)
# When enabled, uses JWT tokens for API authentication
# When disabled, falls back to Django session authentication
JWT_ENABLED=true

# ===========================
# LDAP Settings (only used if LDAP_ENABLED=true)
# ===========================

# LDAP Server Configuration
LDAP_SERVER_URI=ldap://your-ad-server.company.com:389
LDAP_BIND_DN=cn=service-account,ou=service-accounts,dc=company,dc=com
LDAP_BIND_PASSWORD=your-service-account-password

# LDAP Search Configuration
LDAP_USER_BASE=ou=users,dc=company,dc=com
LDAP_USER_FILTER=(sAMAccountName=%(user)s)
LDAP_GROUP_BASE=ou=groups,dc=company,dc=com

# LDAP Group Mappings
LDAP_STAFF_GROUP=cn=skynet-staff,ou=groups,dc=company,dc=com
LDAP_ADMIN_GROUP=cn=skynet-admin,ou=groups,dc=company,dc=com

# ===========================
# JWT Settings (only used if JWT_ENABLED=true)
# ===========================

# JWT Secret Key (IMPORTANT: Change this in production!)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# ===========================
# Database Configuration
# ===========================

DATABASE_URL=postgresql://skynet:skynet_password@skynet-rc1-postgres:5432/skynet_rc1

# ===========================
# Redis Configuration
# ===========================

REDIS_URL=redis://skynet-rc1-redis:6379/0

# ===========================
# Service URLs
# ===========================

API_GATEWAY_URL=http://skynet-rc1-gateway:8000
DOCUMENT_SERVICE_URL=http://skynet-rc1-document:8000
OLLAMA_URL=http://ollama:11434

# ===========================
# Security Settings
# ===========================

# Django Secret Key (IMPORTANT: Change this in production!)
SECRET_KEY=django-insecure-change-this-in-production

# Debug Mode (set to False in production)
DEBUG=false

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,frontend,skynet-rc1-frontend

# ===========================
# AI Configuration
# ===========================

OLLAMA_MODEL=llama3.1:8b
VECTOR_DIMENSIONS=384

# ===========================
# File Upload Settings
# ===========================

# Maximum file upload size (in bytes)
MAX_UPLOAD_SIZE=104857600  # 100MB