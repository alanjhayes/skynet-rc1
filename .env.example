# Skynet RC1 Environment Configuration
# Copy this file to .env and modify the values as needed
# Place the .env file in the root directory of the project

# ===========================
# Core Database Configuration
# ===========================

# PostgreSQL password (REQUIRED)
POSTGRES_PASSWORD=skynet_password

# ===========================
# Django Configuration
# ===========================

# Django secret key (REQUIRED - change in production!)
SECRET_KEY=django-insecure-change-this-in-production

# Debug mode (set to false in production)
DEBUG=false

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,frontend,nginx

# ===========================
# AI Model Configuration
# ===========================

# Ollama model to download and use (REQUIRED)
OLLAMA_MODEL=llama3.1:8b

# Vector embedding dimensions
VECTOR_DIMENSIONS=384

# ===========================
# Authentication Configuration
# ===========================

# Enable/Disable LDAP Authentication (default: false)
# When enabled, users can authenticate with Active Directory
# When disabled, only local Django users are supported
LDAP_ENABLED=false

# Enable/Disable JWT Authentication (default: true)
# When enabled, uses JWT tokens for API authentication
# When disabled, falls back to Django session authentication
JWT_ENABLED=true

# JWT Secret Key (only used if JWT_ENABLED=true)
# IMPORTANT: Change this in production!
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# ===========================
# LDAP Settings (only used if LDAP_ENABLED=true)
# ===========================

# LDAP Server Configuration
LDAP_SERVER_URI=ldap://your-ad-server.company.com:389
LDAP_BIND_DN=cn=service-account,ou=service-accounts,dc=company,dc=com
LDAP_BIND_PASSWORD=your-service-account-password

# LDAP Search Configuration
LDAP_USER_BASE=ou=users,dc=company,dc=com
LDAP_USER_FILTER=(sAMAccountName=%(user)s)
LDAP_GROUP_BASE=ou=groups,dc=company,dc=com

# LDAP Group Mappings
LDAP_STAFF_GROUP=cn=skynet-staff,ou=groups,dc=company,dc=com
LDAP_ADMIN_GROUP=cn=skynet-admin,ou=groups,dc=company,dc=com

# ===========================
# File Upload Settings
# ===========================

# Maximum file upload size (in bytes)
MAX_UPLOAD_SIZE=104857600  # 100MB

# ===========================
# Advanced Configuration (Optional)
# ===========================

# Custom port mappings (uncomment to override defaults)
# POSTGRES_PORT=5432
# REDIS_PORT=6379
# QDRANT_PORT=6333
# OLLAMA_PORT=11434
# FRONTEND_PORT=8080
# GATEWAY_PORT=8000
# DOCUMENT_PORT=8001
# AI_CHAT_PORT=8002
# NGINX_PORT=80

# Service URLs (usually auto-configured by docker-compose)
# DATABASE_URL=postgresql://skynet:${POSTGRES_PASSWORD}@postgres:5432/skynet_rc1
# REDIS_URL=redis://redis:6379/0
# API_GATEWAY_URL=http://gateway:8000
# DOCUMENT_SERVICE_URL=http://document:8000
# OLLAMA_URL=http://ollama:11434